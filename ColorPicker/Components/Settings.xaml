<UserControl
    x:Class="ColorPicker.Components.Settings"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:config="clr-namespace:ColorPicker.Settings"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fa="http://schemas.fontawesome.io/icons/"
    xmlns:local="clr-namespace:ColorPicker.Components"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">

    <Grid Background="{StaticResource SettingsBackground}" PreviewMouseDown="Grid_PreviewMouseDown">




        <StackPanel>

            <TextBlock Text="{x:Static config:Config.VersionNumber}" />


            <CheckBox x:Name="Onstartup" Content="Set window position on startup" />

            <CheckBox x:Name="CaptureOnSelf" Content="Capture color on self" />
            <CheckBox x:Name="CaptureOnBoot" Content="Capture enabled at startup" />



            <StackPanel Margin="0,20,0,20" Orientation="Horizontal">


                <CheckBox
                    x:Name="KeybindInputCheckBox"
                    HorizontalAlignment="Left"
                    Content="General Hotkey" />

                <TextBox
                    x:Name="KeybindInput"
                    Width="200"
                    Height="20"
                    Margin="80,-6,0,0"
                    Focusable="True"
                    GotFocus="KeybindInput_GotFocus"
                    KeyDown="KeybindInput_KeyDown"
                    LostFocus="KeybindInput_LostFocus" />


            </StackPanel>


            <Button
                Width="188"
                Height="32"
                Content="Reset with confirm" />


            <StackPanel
                Margin="5"
                VerticalAlignment="Bottom"
                Orientation="Horizontal">

                <fa:ImageAwesome
                    x:Name="CopyButtonIcon"
                    Width="16"
                    Height="16"
                    Foreground="Black"
                    Icon="github" />

                <TextBox
                    VerticalAlignment="Center"
                    Background="Transparent"
                    BorderThickness="0"
                    IsReadOnly="True"
                    Text="{x:Static config:Config.GithubLink}" />
            </StackPanel>


        </StackPanel>
    </Grid>
</UserControl>
