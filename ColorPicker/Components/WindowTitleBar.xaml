<UserControl
    x:Class="ColorPicker.Components.WindowTitleBar"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fa="http://schemas.fontawesome.io/icons/"
    xmlns:local="clr-namespace:ColorPicker.Components"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid Background="{DynamicResource TitleBarBackground}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>

        <Image
            Grid.Column="0"
            Width="18"
            Height="18"
            Margin="5,0,1,0"
            Source="/Assets/Icon_32.ico" />

        <TextBlock
            Grid.Column="1"
            Margin="4,0,0,0"
            VerticalAlignment="Center"
            FontSize="13"
            Foreground="{DynamicResource PrimaryText}"
            Text="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=Title}" />

        <!--  Debug  -->
        <Button
            x:Name="DebugButton"
            Grid.Column="2"
            Width="46"
            Height="32"
            Click="DebugButton_Click"
            RenderOptions.EdgeMode="Aliased"
            Style="{StaticResource TitleBarButtonStyle}"
            Visibility="Collapsed">
            <fa:ImageAwesome
                Width="12"
                Height="12"
                VerticalAlignment="Center"
                Foreground="Red"
                Icon="Bug" />
        </Button>

        <Button
            x:Name="OnTopButton"
            Grid.Column="3"
            Width="46"
            Height="32"
            Click="OnTopButton_Click"
            RenderOptions.EdgeMode="Aliased"
            Style="{StaticResource TitleBarButtonStyle}">
            <Button.ToolTip>
                Keep this window on top
            </Button.ToolTip>
            <fa:ImageAwesome
                x:Name="OnTopButtonIcon"
                Width="12"
                Height="12"
                VerticalAlignment="Center"
                Foreground="{DynamicResource PrimaryText}"
                Icon="ThumbTack" />
        </Button>

        <Button
            Grid.Column="4"
            Click="OnMinimizeButton_Click"
            RenderOptions.EdgeMode="Aliased"
            Style="{StaticResource TitleBarButtonStyle}">
            <Path
                Width="46"
                Height="32"
                Margin="0,0,0,0"
                Data="M 18,15 H 28"
                Stroke="{Binding Path=Foreground, RelativeSource={RelativeSource AncestorType={x:Type Button}}}"
                StrokeThickness="1" />
        </Button>

        <Button
            Grid.Column="5"
            Click="OnCloseButton_Click"
            Style="{StaticResource TitleBarCloseButtonStyle}">
            <Path
                Width="46"
                Height="32"
                Data="M 18,11 27,20 M 18,20 27,11"
                Stroke="{Binding Path=Foreground, RelativeSource={RelativeSource AncestorType={x:Type Button}}}"
                StrokeThickness="1" />
        </Button>
    </Grid>
</UserControl>
