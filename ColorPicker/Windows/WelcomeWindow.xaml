<Window
    x:Class="ColorPicker.Windows.WelcomeWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:components="clr-namespace:ColorPicker.Components"
    xmlns:config="clr-namespace:ColorPicker.Settings"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fa="http://schemas.fontawesome.io/icons/"
    xmlns:local="clr-namespace:ColorPicker.Windows"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="ColorPick"
    Width="640"
    Height="480"
    AllowsTransparency="True"
    Background="{StaticResource SettingsBackground}"
    FontFamily="Consolas"
    FontSize="13"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterOwner"
    WindowState="Normal"
    WindowStyle="None"
    mc:Ignorable="d">

    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="32" ResizeBorderThickness="{x:Static SystemParameters.WindowResizeBorderThickness}" />
    </WindowChrome.WindowChrome>

    <Border Style="{StaticResource WindowBorderStyle}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="32" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!--  Title Bar  -->
            <Grid
                Grid.Row="0"
                Background="{StaticResource TitleBarBackground}"
                SnapsToDevicePixels="True">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <Image
                    Grid.Column="0"
                    Width="18"
                    Height="18"
                    Margin="6,0,1,0"
                    Source="/Assets/FullSizeIcon_32.ico" />

                <TextBlock
                    Grid.Column="1"
                    Margin="6,0,0,0"
                    VerticalAlignment="Center"
                    FontSize="13"
                    Foreground="{StaticResource PrimaryText}"
                    Text="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=Title}" />

                <Button
                    Grid.Column="2"
                    Click="Ok_Click"
                    Focusable="False"
                    Style="{StaticResource TitleBarCloseButtonStyle}">
                    <Path
                        Width="46"
                        Height="32"
                        Data="M 18,11 27,20 M 18,20 27,11"
                        Stroke="{StaticResource PrimaryText}"
                        StrokeThickness="1" />
                    <Button.ToolTip>
                        Close
                    </Button.ToolTip>
                </Button>
            </Grid>

            <!--  Window  -->
            <Grid Grid.Row="1" Background="{StaticResource SettingsBackground}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <!--  H1  -->
                <Grid Grid.Row="0" Margin="30,16,30,25">
                    <TextBlock
                        HorizontalAlignment="Left"
                        VerticalAlignment="Center"
                        FontSize="18"
                        FontWeight="bold"
                        Foreground="{StaticResource PrimaryText}"
                        Text="Overview" />
                    <TextBlock
                        HorizontalAlignment="Right"
                        VerticalAlignment="Bottom"
                        Foreground="{StaticResource PrimaryText}"
                        Text="{x:Static config:Config.VersionNumber}" />
                </Grid>

                <Separator
                    Grid.Row="0"
                    Height="1"
                    Margin="30,22,30,0"
                    Background="{StaticResource Border}" />

                <!--  Image  -->
                <Grid Grid.Row="1" Margin="0,-20,0,0">

                    <Image
                        Width="510"
                        Height="310"
                        Margin="0,0,0,15"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Panel.ZIndex="1"
                        Source="/Assets/WelcomePic.png" />

                    <!--  Lines and text  -->
                    <Grid Panel.ZIndex="2" IsHitTestVisible="False">

                        <!--  Settings  -->
                        <TextBlock
                            Margin="290,33,278,315"
                            Foreground="{StaticResource PrimaryText}"
                            Text="Settings" />
                        <Rectangle
                            Width="24"
                            Height="1"
                            Margin="367,64,245,301"
                            Fill="{StaticResource PrimaryText}">
                            <Rectangle.RenderTransform>
                                <RotateTransform Angle="225" CenterX="0" CenterY="0.5" />
                            </Rectangle.RenderTransform>
                        </Rectangle>

                        <!--  Ontop  -->
                        <TextBlock
                            Margin="448,33,14,309"
                            Foreground="{StaticResource PrimaryText}"
                            Text="Window ontop" />
                        <Rectangle
                            Width="24"
                            Height="1"
                            Margin="444,47,168,318"
                            Fill="{StaticResource PrimaryText}">
                            <Rectangle.RenderTransform>
                                <RotateTransform Angle="135" CenterX="0" CenterY="0.5" />
                            </Rectangle.RenderTransform>
                        </Rectangle>

                        <!--  Format  -->
                        <TextBlock
                            Margin="151,33,373,316"
                            Foreground="{StaticResource PrimaryText}"
                            Text="Format options" />
                        <Rectangle
                            Width="60"
                            Height="1"
                            Margin="298,90,278,275"
                            Fill="{StaticResource PrimaryText}">
                            <Rectangle.RenderTransform>
                                <RotateTransform Angle="225" CenterX="0" CenterY="0.5" />
                            </Rectangle.RenderTransform>
                        </Rectangle>

                        <!--  Zoom  -->
                        <TextBlock
                            Margin="61,61,526,284"
                            Foreground="{StaticResource PrimaryText}"
                            Text="Zoom" />
                        <Rectangle
                            Width="24"
                            Height="1"
                            Margin="112,92,500,273"
                            Fill="{StaticResource PrimaryText}">
                            <Rectangle.RenderTransform>
                                <RotateTransform Angle="225" CenterX="0" CenterY="0.5" />
                            </Rectangle.RenderTransform>
                        </Rectangle>

                        <!--  Slider  -->
                        <TextBlock
                            Margin="38,301,499,45"
                            Foreground="{StaticResource PrimaryText}"
                            Text="Adjust zoom" />
                        <Rectangle
                            Width="24"
                            Height="1"
                            Margin="138,285,474,80"
                            Fill="{StaticResource PrimaryText}">
                            <Rectangle.RenderTransform>
                                <RotateTransform Angle="135" CenterX="0" CenterY="0.5" />
                            </Rectangle.RenderTransform>
                        </Rectangle>

                        <!--  Pause/Run  -->
                        <TextBlock
                            Margin="339,301,226,45"
                            Foreground="{StaticResource PrimaryText}"
                            Text="Pause/Run" />
                        <Rectangle
                            Width="24"
                            Height="1"
                            Margin="316,285,296,80"
                            Fill="{StaticResource PrimaryText}">
                            <Rectangle.RenderTransform>
                                <RotateTransform Angle="45" CenterX="0" CenterY="0.5" />
                            </Rectangle.RenderTransform>
                        </Rectangle>

                        <!--  Copy  -->
                        <TextBlock
                            Margin="544,131,22,215"
                            Foreground="{StaticResource PrimaryText}"
                            Text="Copy" />
                        <Rectangle
                            Width="24"
                            Height="1"
                            Margin="522,114,90,251"
                            Fill="{StaticResource PrimaryText}">
                            <Rectangle.RenderTransform>
                                <RotateTransform Angle="45" CenterX="0" CenterY="0.5" />
                            </Rectangle.RenderTransform>
                        </Rectangle>
                    </Grid>
                </Grid>

                <Separator
                    Grid.Row="1"
                    Height="1"
                    Margin="30,300,30,0"
                    Background="{StaticResource Border}" />


                <Button
                    Grid.Row="2"
                    Grid.Column="1"
                    Width="220"
                    Height="32"
                    Margin="0,-8,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    Click="Ok_Click"
                    Content="Continue"
                    Cursor="Hand"
                    FontSize="14"
                    FontWeight="SemiBold"
                    IsCancel="True">

                    <Button.Style>
                        <Style BasedOn="{StaticResource {x:Type Button}}" TargetType="Button">
                            <Setter Property="Background" Value="{StaticResource LogoBlue}" />
                            <Setter Property="Foreground" Value="{StaticResource PrimaryText}" />

                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" CornerRadius="4">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>

                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="{StaticResource LogoGreen}" />
                                </Trigger>

                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="Background" Value="Transparent" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>






            </Grid>
        </Grid>
    </Border>
</Window>
