<Window
    x:Class="ColorPicker.Windows.WelcomeWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:components="clr-namespace:ColorPicker.Components"
    xmlns:config="clr-namespace:ColorPicker.Settings"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:fa="http://schemas.fontawesome.io/icons/"
    xmlns:local="clr-namespace:ColorPicker.Windows"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="ColorPick"
    Width="640"
    Height="400"
    AllowsTransparency="True"
    Background="{StaticResource SettingsWindowBackground}"
    FontFamily="Consolas"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterOwner"
    WindowState="Normal"
    WindowStyle="None"
    mc:Ignorable="d">

    <WindowChrome.WindowChrome>
        <WindowChrome CaptionHeight="32" ResizeBorderThickness="{x:Static SystemParameters.WindowResizeBorderThickness}" />
    </WindowChrome.WindowChrome>

    <Border Style="{StaticResource WindowBorderStyle}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="32" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <!--  Title Bar  -->
            <Grid
                Grid.Row="0"
                Background="{StaticResource TitleBarBackground}"
                SnapsToDevicePixels="True">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <Image
                    Grid.Column="0"
                    Width="18"
                    Height="18"
                    Margin="6,0,1,0"
                    Source="/Assets/FullSizeIcon_32.ico" />

                <TextBlock
                    Grid.Column="1"
                    Margin="6,0,0,0"
                    VerticalAlignment="Center"
                    FontSize="13"
                    Foreground="{StaticResource PrimaryText}"
                    Text="{Binding RelativeSource={RelativeSource AncestorType=Window}, Path=Title}" />

                <Button
                    Grid.Column="2"
                    Click="Ok_Click"
                    Focusable="False"
                    Style="{StaticResource TitleBarCloseButtonStyle}">
                    <Path
                        Width="46"
                        Height="32"
                        Data="M 18,11 27,20 M 18,20 27,11"
                        Stroke="{StaticResource PrimaryText}"
                        StrokeThickness="1" />
                    <Button.ToolTip>
                        Close
                    </Button.ToolTip>
                </Button>
            </Grid>

            <!--  Content  -->
            <Grid Grid.Row="1" Background="{StaticResource SettingsBackground}">

                <Grid Panel.ZIndex="1" IsHitTestVisible="False">

                    <!--
                    <Rectangle
                        Height="2"
                        Margin="249,32,297,333"
                        Fill="{StaticResource PrimaryText}" />
                    -->

                    <TextBlock
                        Margin="254,17,-234,-23"
                        FontSize="11"
                        Foreground="{StaticResource PrimaryText}"
                        Text="Open settings" />
                    <Rectangle
                        Width="35"
                        Height="1"
                        Margin="281,50,220,315"
                        Fill="{StaticResource PrimaryText}">
                        <Rectangle.RenderTransform>
                            <RotateTransform Angle="45" CenterX="25" CenterY="0.5" />
                        </Rectangle.RenderTransform>
                    </Rectangle>

                    <TextBlock
                        Margin="460,17,-440,-23"
                        FontSize="11"
                        Foreground="{StaticResource PrimaryText}"
                        Text="Keep this window ontop" />
                    <Rectangle
                        Width="35"
                        Height="1"
                        Margin="410,50,192,314"
                        Fill="{StaticResource PrimaryText}">
                        <Rectangle.RenderTransform>
                            <RotateTransform Angle="135" CenterX="25" CenterY="0.5" />
                        </Rectangle.RenderTransform>
                    </Rectangle>





                </Grid>




                <Grid
                    Grid.Row="1"
                    Margin="10"
                    Panel.ZIndex="0">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>




                    <Image
                        Grid.Row="1"
                        Width="510"
                        Height="310"
                        Source="/Assets/kör.png" />




                    <TextBlock
                        Grid.Row="2"
                        Margin="30,0,0,0"
                        HorizontalAlignment="Right"
                        VerticalAlignment="Center"
                        FontWeight="Bold"
                        Foreground="{StaticResource PrimaryText}"
                        Text="{x:Static config:Config.VersionNumber}" />

                    <Button
                        Grid.Row="2"
                        Width="120"
                        Height="30"
                        HorizontalAlignment="Center"
                        Click="Ok_Click"
                        Content="Got it!"
                        Cursor="Hand"
                        IsCancel="True" />
                </Grid>
            </Grid>
        </Grid>
    </Border>
</Window>
